{
    "language" : "pt_BR",
    "keymap" : "br-abnt2",
    "timezone" : "Brazil/East",
    "hostname" : "arch",
    "partitions" : {
        "efi" : {
            "partition" : "/dev/sda1",
            "filesystem" : "FAT32",
            "format" : false
        },
        "root" : {
            "partition" : "/dev/sda2",
            "filesystem" : "ext4",
            "format" : true
        }
    },
    "users" : [
        {
            "login" : "user",
            "shell" : "fish"
        }
    ],
    "packages" : [
        "dhcpcd",
        "qtile",
        "xorg-server",
        "lightdm",
        "lightdm-gtk-greeter",
        "alacritty",
        "brave-bin",
        "fish"
    ],
    "services" : [
        "dhcpcd",
        "lightdm"
    ],
    "postinstall" : [
        "fish -c 'set -U fish_greeting \"\"'",
        "chsh user -s /usr/bin/fish"
    ]
}
